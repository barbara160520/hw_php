<h2>Каталог</h2>
<div class="catalog">
	<ul class="catalog-menu">
        	{% for item in catalog %}
			    <li class="catalog-list">
			        <p class="text">{{item.name}}<span class="price">Цена: {{item.name}}$</span></p>
			        	<a class='catalog-img' href="/product/card/?id={{item.name}}"> <img src="/img/{{item.name}}"></a>
			        <button class="buy">Купить</button>
			    </li>
				{% endfor %}
			    {% else %}
        <p class="info">Товаров нет</p>
		{% endif %}
	</ul>
	<a class="also" href="/product/catalog/?page={{page}}">Еще</a>
</div>

